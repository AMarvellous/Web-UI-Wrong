@page "/{handler?}/{preguntaAsaId?}/{Id?}"
@model CIAC_TAS_Web_UI.Pages.ASA.PreguntaAsaOpcionModel
@{
   ViewData["Title"] = "PreguntaAsaOpcion";
}


<!-- From here, we should put this code as template in each page -->
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
   <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Opcion Pregunta Page</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
              <li class="breadcrumb-item active">Opcion Pregunta Page</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Opcion Pregunta ASA</h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
              <i class="fas fa-minus"></i>
            </button>
          </div>
        </div>
        <div class="card-body">

            <div class="card-body">

           <form method="post" enctype="multipart/form-data">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label asp-for="PreguntaAsaOpcionModelView.Opcion" class="control-label"></label>
                        <input asp-for="PreguntaAsaOpcionModelView.Opcion" class="form-control" />
                        <span asp-validation-for="PreguntaAsaOpcionModelView.Opcion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PreguntaAsaOpcionModelView.Texto" class="control-label"></label>
                        <input asp-for="PreguntaAsaOpcionModelView.Texto" class="form-control" />
                        <span asp-validation-for="PreguntaAsaOpcionModelView.Texto" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PreguntaAsaOpcionModelView.RespuestaValida" class="control-label"></label>           
                        <input asp-for="PreguntaAsaOpcionModelView.RespuestaValida" class="form-check-input" />
                        <span asp-validation-for="PreguntaAsaOpcionModelView.RespuestaValida" class="text-danger"></span>
                    </div>
                    
                    
                    <br />
                    <div class="row">
                        @{
                            if (Model.PreguntaAsaOpcionModelView?.Id > 0)
                            {
                                    <div class="col-4">
                                        <input type="submit" asp-page-handler="EditPreguntaAsaOpcion" class="btn btn-primary btn-block" value="Guardar">
                                    </div>
                                
                            } else
                            {
                                    <div class="col-4">
                                        <input type="submit" asp-page-handler="NewPreguntaAsaOpcion" class="btn btn-primary btn-block" value="Crear">
                                    </div>
                            }
                        }
                       
                        <!-- /.col -->
                    </div>
            </form>

        </div>
          

        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            @{
                    if (Model.Message != null && Model.Message != string.Empty)
                    {
                                <div id="mensajeDiv" class="callout callout-danger">
                                    @Model.Message
                                </div>
                    }
              }
        </div>
        <!-- /.card-footer-->
      </div>
      <!-- /.card -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <!-- To here -->

